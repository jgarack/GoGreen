<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane fx:id="grid" xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.personalInfoController"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="10" right="25" bottom="10" left="25"/></padding>
    <HBox spacing="20"  GridPane.valignment="CENTER" GridPane.halignment="CENTER">
        <HBox GridPane.rowIndex="1" fx:id="avatarImageBox" maxWidth="250" maxHeight="250" GridPane.rowSpan="2">
            <ImageView fx:id="avatarImageView" GridPane.halignment="LEFT">
                <Image url="@/icons/avatar1.png" preserveRatio="false"/>
             </ImageView>
        </HBox>
        <Button GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" fx:id="selectAvatar" text="Select Avatar" onAction="#changeAvatar"/>
        <Button GridPane.rowIndex="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM" onAction="#submitChanges" text="Submit avatar changes"/>
        <Label fx:id="infoChangeAvatarLabel" GridPane.rowIndex="1" GridPane.halignment="RIGHT"/>
    </HBox>
    <Label text="Old Password" GridPane.halignment="CENTER" GridPane.valignment="CENTER" GridPane.rowIndex="3"/>
    <PasswordField fx:id="oldPass" GridPane.rowIndex="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <Label text="New Password" GridPane.rowIndex="5" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <PasswordField fx:id="newPass" GridPane.rowIndex="6"/>
    <Label text="Confirm new password" GridPane.rowIndex="7" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <PasswordField fx:id="confirmNewPass" GridPane.rowIndex="8"/>
    <Button text="Change Password" GridPane.rowIndex="9" GridPane.halignment="CENTER"/>
    <stylesheets>
        <URL value="@../stylesheets/loginStylesheet.css"/>
    </stylesheets>
</GridPane>
