<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<GridPane fx:id="grid" xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="10" right="25" bottom="10" left="25"/></padding>
    <Label text="Old Password" GridPane.halignment="CENTER" GridPane.valignment="CENTER" GridPane.rowIndex="1"/>
    <PasswordField fx:id="oldPass" GridPane.rowIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <Label text="New Password" GridPane.rowIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <PasswordField fx:id="newPass" GridPane.rowIndex="4"/>
    <Label text="Confirm new password" GridPane.rowIndex="5" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <PasswordField fx:id="confirmNewPass" GridPane.rowIndex="6"/>
    <Button text="Change Password" GridPane.rowIndex="7" GridPane.halignment="CENTER"/>

    <Text fx:id="actionTarget" GridPane.rowIndex="8" />
    <stylesheets>
        <URL value="@../stylesheets/loginStylesheet.css"/>
    </stylesheets>
</GridPane>
