<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<ListView xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.HomeController"
          prefHeight="400.0" prefWidth="600.0"
            fx:id="featuresList">


        <BorderPane.margin><Insets top="25.0" left="50" /></BorderPane.margin>
        <HBox>
            <ProgressBar fx:id="progressBarGreen" prefWidth="1600" prefHeight="50" progress="0.0"/>
        </HBox>
        <HBox spacing="5">
            <Label fx:id="vegMealsEaten" alignment="CENTER" HBox.hgrow="ALWAYS" prefWidth="1600">
                Vegetarian Meals eaten:
            </Label>
        </HBox>
        <HBox spacing="5">
            <Button fx:id="decreaseVegetarianMealsBtn" text="-" onAction="#decreaseVegetarianMeals"/>
            <TextField alignment="CENTER" prefWidth="1600" fx:id="vegMeals"/>
            <Button fx:id="increaseVegetarianMealsBtn" text="+" onAction="#increaseVegetarianMeals"/>
        </HBox>
        <HBox spacing="5">
            <Label fx:id="bicycleUsedLabel" alignment="CENTER" HBox.hgrow="ALWAYS"  prefWidth="1600">
                Times you have used bicycle instead of a car:
            </Label>
        </HBox>
        <HBox prefWidth="Infinity" prefHeight="500">
            <Button fx:id="decreaseBicycleUsageBtn" text="-" onAction="#decreaseBicycleUsage"/>
            <TextField alignment="CENTER" fx:id="bicycleUsage" prefWidth="1600"/>
            <Button fx:id="increaseBicycleUsageBtn" text="+" onAction="#increaseBicycleUsage"/>
        </HBox>





</ListView>
